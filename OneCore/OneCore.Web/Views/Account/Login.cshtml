
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-12" data-ng-controller="singin-home">
        <form name="formLogin" class="form-signin" data-ng-submit="login()" novalidate>
            <h1 class="h3 mb-3 font-weight-normal">Iniciar sesión</h1>

            <div class="form-group">
                <label for="inputUser" class="sr-only">Usuario</label>
                <input type="text" id="inputUser" class="form-control mb-3"
                       placeholder="Usuario" required autofocus
                       data-ng-model="modelLogin.User">
            </div>

            <div class="form-group">
                <label for="inputPassword" class="sr-only">Contraseña</label>
                <input type="password" id="inputPassword" class="form-control"
                       placeholder="Contraseña" required
                       data-ng-model="modelLogin.Password">
            </div>
            <span data-ng-cloak data-ng-if="modelLogin.invalid"
                  class="has-error error-msg mb-2" style="display:block;color:red">El usuario o contraseña son incorrectos</span>

            <button class="btn btn-lg btn-primary btn-block"
                    type="submit" data-ng-disabled="!formLogin.$valid">
                Enviar
            </button>
            <p class="mt-1 mb-3 text-muted">¿No tienes una cuenta? <a href="@Url.Action("SingUp","Account")">¡Registrar aquí!</a></p>
        </form>
    </div>
</div>


@section Scripts{
    <script src="~/app/service/app.accountService.js"></script>
    <script src="~/app/view/Account/singIn.account.js"></script>
}
